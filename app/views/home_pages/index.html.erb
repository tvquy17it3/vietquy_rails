<h1>HomePages#index</h1>

<div class="x_content">
  <% if @users.any? %>
    <div class="row">
      <div class="col-sm-12">
        <div class="card-box table-responsive">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each_with_index do |user, i|%>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <h1 class="text-center cart-index-title">
      No User
    </h1>
  <% end %>
</div>
